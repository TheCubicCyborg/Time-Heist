resource_name = "menu_tabs"
script/source = "extends TabContainer

var tabs : Array = [MenuTabPanel]
@export var focused_tab : int = 0

func _ready() -> void:
	tabs = [
		$DeviceFiles, $DeviceFiles2, $DeviceFiles3, $DeviceFiles4
	]
	select_tab(focused_tab)

func handle_input():
	if Input.is_action_just_pressed(\"ui_focus_next\"):
		focused_tab = (focused_tab + 1) % 4
		select_tab(focused_tab)
	if Input.is_action_just_pressed(\"ui_focus_prev\"):
		focused_tab = (focused_tab - 1) % 4
		select_tab(focused_tab)
		
func select_tab(selected_tab : int):
	for tab in tabs:
		tab.hide()
	tabs[selected_tab].show()
	tabs[selected_tab].select()
"

