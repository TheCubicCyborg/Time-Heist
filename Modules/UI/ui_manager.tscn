[sub_resource type="GDScript" id="GDScript_yaem8"]
resource_name = "TimeDisplay"
script/source = "extends Label

func _process(_delta):
	var cur_time = globals.time_manager.cur_time
	@warning_ignore(\"integer_division\")
	text = \"Time Display: \" + \"%02d:%02d.%03d\" % [cur_time/60,int(cur_time)%60,(cur_time - int(cur_time))*1000]
"

[sub_resource type="GDScript" id="GDScript_u3icv"]
resource_name = "StateDisplay"
script/source = "extends Label

func _process(_delta):
	var cur_state = \"N/A\"
	if globals.player:
		cur_state = globals.player.state_machine.current_state.get_script().get_global_name()
	text = \"Current State: \" + cur_state
"

